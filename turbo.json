{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "lint": {},
    "lint:fix": {},
    "generate": {},
    "build": {
      "dependsOn": [
        "^generate",
        "lint:fix"
      ],
      "inputs": [
        "src/**",
        "tsconfig.json",
        "tsup.config.ts"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "storybook:build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        ".storybook/**",
        "stories/**"
      ],
      "outputs": [
        "storybook-static/**"
      ]
    },
    "publish:nightly": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "dist/**"
      ]
    }
  }
}
